<Window x:Class="Clock.ClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:local="clr-namespace:Clock" mc:Ignorable="d" ResizeMode="NoResize"
Title="Precise Clock" Height="300" Width="500" WindowStyle="None"
FontFamily="Comic Sans MS" Background="Transparent"
 MouseDown="Window_MouseDown" AllowsTransparency="True" >
    <Border CornerRadius="50" Background="#FF90FFF1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label  Name="ClockLabel" Grid.Column="0" Grid.Row="0"
                HorizontalAlignment="Center" Margin="0 0 0 0"
                Foreground="#DDB53EF8" Content="00:00:00.01"
                VerticalAlignment="Center" FontSize="60" 
                    FontWeight="DemiBold"/>
        </Grid>
    </Border>
</Window>